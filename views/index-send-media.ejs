<div>
    <form class="myform" action="/send-media" method="POST" enctype="multipart/form-data">
        <h3>Send Media </h3>
        <div class="form-group">
            <label for="sender">Sender id:</label>
            <select id="sender" name="sender" type="sender">
                <option name="sender" type="sender" value="">-- Select --</option>
                <% for(var i=0; i < data.length; i++) { %>
                    <% if (data[i].ready === false) continue; %>
                    <% if (data[i].username !== user.username) continue; %>
                    <% var cId = (data[i].id).replace('-' + data[i].username, ''); %>
                    <option name="sender" value=<%= data[i].id %>> <%= cId %>
                    </option>
                 <% } %>
                 </select>
        </div>
        <div class="form-group">
            <label for="number">Number:</label>
            <input type="number" name="number" class="form-control" />
        </div>
        <div class="form-group">
            <label for="caption">Caption:</label>
            <input type="caption" name="caption" class="form-control" />
        </div>
        <div class="form-group">
            <input type="file" id="file" name="filename" class="form-control">
        </div>
        <input type="submit" id="send" name="" value="Send" />
    </form>
</div>